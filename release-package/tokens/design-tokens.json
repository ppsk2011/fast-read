{
  "metadata": {
    "product": "ReadSwift",
    "version": "1.0.0",
    "theme": "dark",
    "description": "Production design tokens for ReadSwift RSVP Speed Reader. Compatible with React MUI createTheme().",
    "source": "Extracted from production CSS â€” src/styles/app.css and src/styles/*.module.css"
  },
  "palette": {
    "background": {
      "default": "#060606",
      "paper": "#0f0f0f",
      "elevated": "#1a1a1a",
      "input": "#2a2a2a",
      "item": "#242424"
    },
    "text": {
      "primary": "#f0f0f0",
      "secondary": "#cccccc",
      "tertiary": "#aaaaaa",
      "disabled": "#555555"
    },
    "grey": {
      "900": "#111111",
      "800": "#1a1a1a",
      "700": "#2a2a2a",
      "600": "#333333",
      "500": "#444444",
      "400": "#555555",
      "300": "#666666",
      "200": "#888888",
      "100": "#aaaaaa",
      "50": "#cccccc"
    },
    "primary": {
      "main": "#2d6af6",
      "light": "#5b8af8",
      "dark": "#1e56d0",
      "contrastText": "#ffffff"
    },
    "error": {
      "main": "#e74c3c",
      "light": "#ec7167",
      "dark": "#c0392b",
      "contrastText": "#ffffff"
    },
    "divider": "#333333"
  },
  "typography": {
    "fontFamily": {
      "ui": "'Segoe UI', system-ui, -apple-system, sans-serif",
      "reading": "'Georgia', serif",
      "mono": "monospace"
    },
    "fontSize": {
      "xs": "0.8rem",
      "sm": "0.85rem",
      "base": "0.9rem",
      "md": "1rem",
      "lg": "1.1rem",
      "xl": "1.3rem",
      "2xl": "clamp(1.6rem, 4vw, 2.4rem)",
      "word": "clamp(2.5rem, 8vw, 5rem)"
    },
    "fontWeight": {
      "regular": 400,
      "bold": 700,
      "extrabold": 800
    },
    "letterSpacing": {
      "tight": "-0.02em",
      "normal": "0em",
      "wide": "0.04em"
    },
    "lineHeight": {
      "tight": 1,
      "normal": 1.4,
      "relaxed": 1.6
    },
    "htmlFontSize": 16,
    "muiOverrides": {
      "h1": {
        "fontFamily": "'Segoe UI', system-ui, -apple-system, sans-serif",
        "fontSize": "clamp(1.6rem, 4vw, 2.4rem)",
        "fontWeight": 800,
        "letterSpacing": "-0.02em",
        "color": "#f0f0f0"
      },
      "body1": {
        "fontFamily": "'Segoe UI', system-ui, -apple-system, sans-serif",
        "fontSize": "1rem",
        "fontWeight": 400,
        "color": "#f0f0f0"
      },
      "body2": {
        "fontFamily": "'Segoe UI', system-ui, -apple-system, sans-serif",
        "fontSize": "0.875rem",
        "fontWeight": 400,
        "color": "#aaaaaa"
      },
      "caption": {
        "fontFamily": "'Segoe UI', system-ui, -apple-system, sans-serif",
        "fontSize": "0.8rem",
        "color": "#888888"
      }
    }
  },
  "spacing": {
    "base": 4,
    "scale": [0, 4, 8, 12, 16, 24, 32, 48, 64],
    "named": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "0.75rem",
      "lg": "1rem",
      "xl": "1.5rem",
      "2xl": "2rem",
      "3xl": "3rem"
    }
  },
  "shape": {
    "borderRadius": {
      "none": 0,
      "sm": 4,
      "md": 8,
      "lg": 10,
      "xl": 12,
      "full": 9999
    }
  },
  "shadows": {
    "none": "none",
    "note": "The ReadSwift design system uses no shadows. Depth is communicated through background colour stepping. All shadow values resolve to none.",
    "sm": "none",
    "md": "none",
    "lg": "none"
  },
  "transitions": {
    "duration": {
      "instant": "60ms",
      "fast": "150ms",
      "base": "300ms",
      "slow": "500ms"
    },
    "easing": {
      "standard": "ease",
      "accelerate": "ease-in",
      "decelerate": "ease-out"
    },
    "wordAppear": {
      "duration": "60ms",
      "easing": "ease-out",
      "keyframes": {
        "from": { "opacity": 0, "transform": "translateY(4px)" },
        "to": { "opacity": 1, "transform": "translateY(0)" }
      }
    }
  },
  "zIndex": {
    "base": 0,
    "raised": 10,
    "modal": 1000,
    "toast": 1100
  },
  "breakpoints": {
    "sm": "480px",
    "md": "640px",
    "lg": "900px",
    "note": "Layout collapses from side-by-side to stacked at 640px. Max content width is 900px."
  },
  "components": {
    "viewport": {
      "height": "280px",
      "background": "#0f0f0f",
      "borderRadius": "12px"
    },
    "controlsBar": {
      "background": "#1a1a1a",
      "borderRadius": "10px",
      "padding": "0.75rem 1rem",
      "gap": "0.75rem"
    },
    "focalLine": {
      "width": "60px",
      "height": "2px",
      "background": "#e74c3c",
      "opacity": 0.7,
      "borderRadius": "1px"
    },
    "button": {
      "primary": {
        "background": "#2d6af6",
        "color": "#ffffff",
        "borderRadius": "8px",
        "padding": "0.5rem 1.1rem",
        "fontSize": "0.95rem",
        "hoverBackground": "#1e56d0",
        "disabledOpacity": 0.5
      },
      "secondary": {
        "background": "#2a2a2a",
        "color": "#f0f0f0",
        "border": "1px solid #444444",
        "borderRadius": "8px",
        "padding": "0.5rem 0.85rem",
        "hoverBackground": "#3a3a3a",
        "disabledOpacity": 0.4
      }
    },
    "slider": {
      "accentColor": "#e74c3c"
    },
    "progressBar": {
      "track": "#333333",
      "fill": "#e74c3c",
      "height": "8px",
      "borderRadius": "4px"
    },
    "historyProgressBar": {
      "track": "#333333",
      "fill": "#2d6af6",
      "height": "4px",
      "borderRadius": "2px"
    },
    "kbd": {
      "background": "#222222",
      "border": "1px solid #444444",
      "borderRadius": "4px",
      "padding": "0.1em 0.45em",
      "fontSize": "0.8rem",
      "color": "#bbbbbb",
      "fontFamily": "monospace"
    }
  },
  "muiTheme": {
    "_comment": "Pass this object to MUI createTheme() to apply the ReadSwift design system.",
    "palette": {
      "mode": "dark",
      "primary": {
        "main": "#2d6af6",
        "light": "#5b8af8",
        "dark": "#1e56d0",
        "contrastText": "#ffffff"
      },
      "error": {
        "main": "#e74c3c",
        "light": "#ec7167",
        "dark": "#c0392b",
        "contrastText": "#ffffff"
      },
      "background": {
        "default": "#060606",
        "paper": "#1a1a1a"
      },
      "text": {
        "primary": "#f0f0f0",
        "secondary": "#aaaaaa",
        "disabled": "#555555"
      },
      "divider": "#333333"
    },
    "typography": {
      "fontFamily": "'Segoe UI', system-ui, -apple-system, sans-serif",
      "htmlFontSize": 16
    },
    "shape": {
      "borderRadius": 8
    },
    "components": {
      "MuiPaper": {
        "defaultProps": { "elevation": 0 },
        "styleOverrides": {
          "root": { "backgroundImage": "none" }
        }
      },
      "MuiButton": {
        "styleOverrides": {
          "root": {
            "textTransform": "none",
            "fontWeight": 700,
            "borderRadius": "8px"
          }
        }
      },
      "MuiSlider": {
        "styleOverrides": {
          "root": { "color": "#e74c3c" }
        }
      }
    }
  }
}
